\set QUIET 1
\pset null ◉
\pset linestyle unicode
\pset format wrapped
\pset border 2
\pset pager off
\set COMP_KEYWORD_CASE lower
\set HISTFILE ~/.cache/psql/history/ :DBNAME
\set HISTSIZE 262144 -- 256k
\set HISTCONTROL ignoredups
\set ON_ERROR_ROLLBACK interactive
\set VERBOSITY verbose

\set PROMPT1 '%[%033[1m%]%n@%~\n%M%R❯%[%033[0m%] '
\set PROMPT2 '%[%033[1m%]%M%R❯%[%033[0m%] '
-- DO PROMPT3?
\unset QUIET